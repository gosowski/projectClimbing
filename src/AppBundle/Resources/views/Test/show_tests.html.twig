{% extends "default/index.html.twig" %}

{% block content %}
    <table class="table table-hover table-sm text-center">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Data przeprowadzania</th>
            <th scope="col">Link</th>
        </tr>
        </thead>
        <tbody>
        {% set counter = 1 %}
        {% for test in tests %}
            <tr>
                <td>{{ counter }}</td>
                <td>{{ test.date|date("Y.m.d") }}</td>
                <td><a class="btn btn-outline-info btn-sm" href="">Zobacz</a></td>
            </tr>
            {% set counter = counter+1 %}
        {% endfor %}
        </tbody>
    </table>
{% endblock %}