{% extends "default/index.html.twig" %}

{% block content %}
    <table class="table table-hover table-sm text-center mainContent">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Data przeprowadzania</th>
            <th scope="col">Opis</th>
            <th scope="col">Psychika</th>
            <th scope="col">Technika i taktyka</th>
            <th scope="col">Si≈Ça fizyczna</th>
            <th scope="col">PDF</th>
            <th scope="col">Link</th>
        </tr>
        </thead>
        <tbody>
        {% set counter = 1 %}
        {% for test in tests %}
            <tr>
                <td>Test #{{ counter }}</td>
                <td>{{ test.date|date("Y.m.d H:i:s") }}</td>
                <td>{{ test.description }}</td>
                <td>{{ test.psyche }}</td>
                <td>{{ test.tactic }}</td>
                <td>{{ test.strength }}</td>
                <td><a class="btn btn-outline-info btn-sm" href="/singleTest/{{ test.id }}/1/"><i class="far fa-file-pdf fa-lg"></i></a></td>
                <td><a class="btn btn-outline-info btn-sm" href="/singleTest/{{ test.id }}/0/"><i class="fas fa-external-link-alt fa-lg"></i></a></td>
            </tr>
            {% set counter = counter+1 %}
        {% endfor %}
        </tbody>
    </table>
{% endblock %}