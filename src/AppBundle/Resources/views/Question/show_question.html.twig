{% extends "default/index.html.twig" %}

{% block javascript %}
    <script src="{{ asset('js/app.js') }}"></script>
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row my-5" id="legend">
            <div class="col-lg-12 text-center">

                <p><strong>0</strong> = prawie zawsze
                    <strong>1</strong> = często
                    <strong>2</strong> = przez połowę czasu
                    <strong>3</strong> = czasami
                    <strong>4</strong> = rzadko
                    <strong>5</strong> = nigdy</p>
            </div>
        </div>
        <div class="row my-5">
            <div class="col-2">

            </div>
            <div class="col-8 text-center question">
                <h3>{{ question.text }}</h3>
            </div>
            <div class="col-2">

            </div>
        </div>
        {{ form_start(form, {'attr': { 'id': 'answer' } }) }}
        <div class="row my-5">
            <div class="col-4"></div>
            <div class="col-4">
                {{	form_label(form.value)	}}
                {{	form_widget(form.value)	}}
            </div>
            <div class="col-4"></div>
        </div>
        <div class="row justify-content-between my-5">
            <div class="col-2">
                <button type="submit" class="btn btn-outline-primary" id="previous">
                    Poprzednie
                </button>
            </div>
            <div class="col-8"></div>
            <div class="col-2">
                <button type="submit" class="btn btn-outline-primary" id="next" style="width: 107px;">
                    Następne
                </button>
            </div>
        </div>
        {{ form_end(form) }}

        <div class="row">
            <div class="col-1"></div>
            <div class="col-10 text-center">
                <div class="progress">
                    {% set val = id*100/30 %}
                    <div class="progress-bar progress-bar-striped" role="progressbar" style="width: {{ val }}%"
                         aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
            <div class="col-1"></div>
        </div>
    </div>
    <script>
        var questionId = {{ id }};
    </script>

{% endblock %}
