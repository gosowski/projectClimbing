{% extends "default/index.html.twig" %}

{% block content %}
    <table class="table table-hover table-sm text-center">
        <thead>
        <tr>
            <th scope="col">Numer pytania</th>
            <th scope="col">Twoja ocena</th>
            <th scope="col">Zobacz pytanie</th>
        </tr>
        </thead>
        <tbody>
        {% for key, value in answers %}
            <tr>
                <td>{{ key }}</td>
                <td>{{ value }}</td>
                <td><a class="btn btn-outline-info btn-sm" href="/singleQuestion/{{ key }}/">Zobacz</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}