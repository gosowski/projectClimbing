{% extends "default/index.html.twig" %}

    {% block content %}
        <table class="table table-hover table-sm text-center mainContent">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">ID</th>
                <th scope="col">Tekst</th>
                <th scope="col">Akcja</th>
            </tr>
            </thead>
            <tbody>
            {% set counter = 0 %}
            {% for question in questions %}
                {% set counter = counter +1 %}
                <tr>
                    <td>{{ counter }}</td>
                    <td>{{ question.id }}</td>
                    <td>{{ question.text }}</td>
                    <td>
                        <a class="btn btn-outline-warning btn-sm" href="update/{{ question.id }}/">Edycja</a>
                        <a class="btn btn-outline-danger btn-sm" href="delete/{{ question.id }}/">Usu≈Ñ</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endblock %}
