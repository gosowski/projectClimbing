{% extends "default/index.html.twig" %}

{% block content %}
    <table class="table table-hover table-sm text-center mainContent">
        <thead>
        <tr>
            <th scope="col">Data przeprowadzania</th>
            <th scope="col">Opis</th>
            <th scope="col">Psychika</th>
            <th scope="col">Technika i taktyka</th>
            <th scope="col">Siła fizyczna</th>
        </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ test.date|date("Y.m.d H:i:s") }}</td>
                <td>{{ test.description }}</td>
                <td>{{ test.psyche }}</td>
                <td>{{ test.tactic }}</td>
                <td>{{ test.strength }}</td>
            </tr>
        </tbody>
    </table>

    <table class="table table-sm text-center mainContent">
        <thead>
        <tr>
            <th scope="col">Numer pytania</th>
            <th scope="col">Treść pytania</th>
            <th scope="col">Twoja ocena</th>
        </tr>
        </thead>
        <tbody>
        {% for answer in answers %}
            <tr>
                <td>{{ answer.question.id }}</td>
                <td>{{ answer.question.text }}</td>
                <td class="values">{{ answer.value }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}