{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post" id="formLogin">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
    {% endif %}

    <div class="form-group col-6 mt-5">
        <label for="username">{{ 'security.login.username'|trans }}: </label>
        <div>
            <input class="form-control" type="text" id="username" name="_username" required="required"/>
        </div>
    </div>

    <div class="form-group col-6">
        <label for="password">{{ 'security.login.password'|trans }}: </label>
        <div>
            <input class="form-control" type="password" id="password" name="_password" required="required"/>
        </div>
    </div>

    <div class="form-group">
        <div class="col-6">
        <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
        </div>
    </div>

    <div class="form-group col-6">
        <button class="btn btn-outline-success">{{ 'security.login.submit'|trans }}</button>
    </div>
</form>
